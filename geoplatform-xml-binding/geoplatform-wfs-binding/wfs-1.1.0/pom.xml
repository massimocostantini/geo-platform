<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
  
    <parent>
        <groupId>org.geosdi</groupId>
        <artifactId>geoplatform-wfs-binding</artifactId>
        <version>1.5-SNAPSHOT</version>
    </parent>
  
    <groupId>org.geosdi</groupId>
    <artifactId>wfs-1.1.0</artifactId>
    <version>1.5-SNAPSHOT</version>
    <packaging>jar</packaging>  
  
    <name>Geo-Platform :: == Binding WFS 1.1.0 XML Module</name>
  
    <dependencies>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
        </dependency>

        <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics-runtime</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.geosdi</groupId>
            <artifactId>gml-3.1.1</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.geosdi</groupId>
            <artifactId>filter-1.1.0</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.geosdi</groupId>
            <artifactId>ows-1.0.0</artifactId>
        </dependency>
        
        <dependency>
            <groupId>org.geosdi</groupId>
            <artifactId>geoplatform-w3c-xsd-binding</artifactId>
            <version>1.5-SNAPSHOT</version>
        </dependency>
    </dependencies>
  
    <build>
        <plugins>
            <!-- mvn jaxb2:generate -X -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>

                <configuration>
                    <schemaIncludes>
                        <value>wfs/*/wfs.xsd</value>
                    </schemaIncludes>
                    <episodes>
                        <episode>
                            <groupId>org.geosdi</groupId>
                            <artifactId>gml-3.1.1</artifactId>
                        </episode>
                        <episode>
                            <groupId>org.geosdi</groupId>
                            <artifactId>filter-1.1.0</artifactId>
                        </episode>
                        <episode>
                            <groupId>org.geosdi</groupId>
                            <artifactId>ows-1.0.0</artifactId>
                        </episode>
                    </episodes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
